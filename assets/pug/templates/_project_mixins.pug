// Input //
mixin input(data)
	.global_input(class=data.class)
		input(type=data.type ? data.type : data.type="text" placeholder=data.place ? data.place : data.place="" value=data.val ? data.val : data.val="")

// END //

// BTN //
mixin btn(data)
	if data.link
		.btn-link 
			a(href="#")
				p=data.name
				if data.icon === true 
					.btn_link_icon 
						+icon('arr-right')
	else if data.btn === true 
		.btn(class=data.class)
			button(type=data.type ? data.type : data.type="button")
				p=data.name
				if data.icon === true 
					.btn_link_icon 
						+icon('arr-right')

// END //

