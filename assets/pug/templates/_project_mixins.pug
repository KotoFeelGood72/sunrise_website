mixin horizen 
	.card 
		.card_img
			a(href="#")
				img(src="i/home/products_0.jpg", alt="")
				.card_label Горячее предложение
		.card_content_w
			.card_content
				.card_title
					h3 3-к квартира, 93,7 м², 9/10 эт.
				.card_address 
					.card_address_icon 
						+icon('location')
					p Краснодарский край, село Агой, переулок Центральный, 2
			.card_bottom 
				.card_price 15 000 000
				+btn({
						link: true,
						name: 'Посмотреть',
						icon: true,
					})

